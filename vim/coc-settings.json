{
  "diagnostic.displayByAle": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    },
    "python": {
      "filetypes": ["py"],
      "pyright.enable": true,
      "python.analysis.diagnosticEnabled": false,
      "python.linting.enabled": false
    }
  }
}
